<!DOCTYPE html>
<html lang="en">
  <script>
    window.peers = {};
  </script>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video Conferencing Webapp</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
      let val = 0;
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <div id="chatclose" class="functions__button_chatclose">
            <i class="fas fa-times"></i>
            <h6> Close Chat</h6>
          </div>
        </div>
        <div id="miclogo" class="functions__button_microsoft">
          <i class="fas fa-camera-retro"></i>
        </div>
        <h2 style="color: white;">Video Conferencing Webapp</h2>
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__container">
        <div id="video-grid">

        </div>
      </div>
      <div class="functions">
        <div class="functions__left">
          <div id="stopVideo" class="functions__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="functions__button">
            <i class="fa fa-microphone-alt"></i>
          </div>
          <div id="showChat" class="functions__button">
            <i class="far fa-comment-alt"></i>
          </div>
        </div>
        <div class="functions__right">
          <div id="inviteButton" class="functions__button">
            <i class="fas fa-users"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="functions__button">
          <i class="fas fa-paper-plane" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>
</html>
